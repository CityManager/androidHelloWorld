<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/learnActivityLifeCycleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_n01_activity_life_cycle"
            />
        <Button
            android:id="@+id/learnDefaultTaskActivityBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_task_managing_default_task_activity"
            />

        <Button
            android:id="@+id/learnSingleTopTaskActivityBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_task_managing_single_top_activity"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:id="@+id/learnSingleTaskActivityBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_task_managing_single_task_activity"
            android:layout_row="1"
            android:layout_column="1" />
        <Button
            android:id="@+id/learnCustomViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义view 1"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/learnCustomViewBasicListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义view: ListView"
            android:layout_row="2"
            android:layout_column="1"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/learnCustomListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义view: CustomListView"
            android:layout_row="3"
            android:layout_column="0"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/learnCustomRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view: RecyclerView"
            android:layout_row="3"
            android:layout_column="1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/learnCustomHorizontalRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水平 RecyclerView"
            android:layout_row="4"
            android:layout_column="0"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/learnBestUIPractice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI最佳实践"
            android:layout_row="4"
            android:layout_column="1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/learnBasicFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Fragment"
            android:layout_row="5"
            android:layout_column="0"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/learnDynamicFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态 Fragment"
            android:layout_row="5"
            android:layout_column="1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/learnBasicBroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标准 broadcast"
            android:layout_row="6"
            android:layout_column="0"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/learnOrderedBroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态 broadcast"
            android:layout_row="6"
            android:layout_column="1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/learnLocalBroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地 broadcast"
            android:layout_row="7"
            android:layout_column="0"
            android:textAllCaps="false"/>

    </GridLayout>

</android.support.design.widget.CoordinatorLayout>